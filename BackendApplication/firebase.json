{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/signup/username/:uname/password/:pword",
        "function": "app"
      },
      {
        "source": "/signin/username/:uname/password/:pword",
        "function": "app"
      },
      {
        "source": "/DriverReady/token/:token/lat/:lat/lng/:lng",
        "function": "app"
      },
      {
        "source": "/DriverReady/OnMissionNotify/token/:token",
        "function": "app"
      },
      {
        "source": "/DriverReady/OnMissionNotify/token/:token/IsOnMission/:IsOnMission",
        "function": "app"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
